<Window x:Class="Fishing_Lake.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fishing_Lake"
        mc:Ignorable="d"
        Title="LoginWindow" Height="550" Width="900" WindowStartupLocation="CenterScreen" Background="#e0f7fa" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <!-- Hình ảnh hoặc logo chủ đề câu cá -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="FishingHub" FontSize="28" FontWeight="Bold" Foreground="#0288d1" Margin="0,20,0,0"/>
            <TextBlock Text="Cộng đồng đam mê câu cá" FontSize="16" Foreground="#00796b"/>
        </StackPanel>
        <!-- Form đăng nhập -->
        <Border Grid.Column="1" CornerRadius="16" Background="White" Padding="40" Margin="40" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Đăng nhập tài khoản" FontSize="22" FontWeight="SemiBold" Foreground="#0288d1" Margin="0,0,0,24" HorizontalAlignment="Center"/>
                <TextBlock Text="Số điện thoại" FontSize="14" Margin="0,0,0,4"/>
                <TextBox x:Name="PhoneTextBox" Height="32" FontSize="16" Margin="0,0,0,16"/>
                <TextBlock Text="Mật khẩu" FontSize="14" Margin="0,0,0,4"/>
                <PasswordBox x:Name="PasswordBox" Height="32" FontSize="16" Margin="0,0,0,24"/>
                <Button x:Name="LoginButton" Content="Đăng nhập" Height="36" Background="#0288d1" Foreground="White" FontWeight="Bold" FontSize="16"/>
            </StackPanel>
        </Border>
        <Button x:Name="RegisterButton"
            Content="Đăng ký"
            Height="36"
            Width="200"
            Background="#4fc3f7"
            Foreground="#0288d1"
            FontWeight="Bold"
            FontSize="16"
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"/>
        
    </Grid>
</Window>
