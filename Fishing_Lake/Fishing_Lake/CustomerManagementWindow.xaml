<Window x:Class="Fishing_Lake.CustomerManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fishing_Lake"
        mc:Ignorable="d"
        Title="Quản lý khách hàng" Height="500" Width="800"
        WindowStartupLocation="CenterScreen" Background="#e0f7fa">
    <DockPanel Margin="10">

        <!-- Ô tìm kiếm -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
            <TextBlock Text="🔍 Tìm kiếm: " VerticalAlignment="Center"/>
            <TextBox x:Name="SearchBox" Width="200" Margin="5,0" TextChanged="SearchBox_TextChanged"/>
        </StackPanel>

        <!-- Danh sách khách hàng -->
        <ListView x:Name="CustomerListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Tên" Width="150" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="SĐT" Width="120" DisplayMemberBinding="{Binding Phone}" />
                    <GridViewColumn Header="VIP" Width="50" DisplayMemberBinding="{Binding IsVipText}" />
                    <GridViewColumn Header="Lượt đi câu" Width="100" DisplayMemberBinding="{Binding TotalBookings}" />
                    
                </GridView>
            </ListView.View>
        </ListView>

    </DockPanel>
</Window>
