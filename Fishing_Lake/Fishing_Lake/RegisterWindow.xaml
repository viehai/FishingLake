<Window x:Class="Fishing_Lake.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fishing_Lake"
        mc:Ignorable="d"
        Title="Create Account" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#e0f7fa">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Register New Account" FontSize="20" FontWeight="Bold" Foreground="#0288d1" Margin="0,0,0,20"/>

            <TextBlock Text="Full Name:"/>
            <TextBox x:Name="NameTextBox" Height="30"/>

            <TextBlock Text="Phone Number:" Margin="0,10,0,0"/>
            <TextBox x:Name="PhoneTextBox" Height="30"/>

            <TextBlock Text="Password:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordBox" Height="30"/>

            <Button Content="Register" Click="RegisterButton_Click" Height="40" Background="#0288d1" Foreground="White" FontWeight="Bold" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
