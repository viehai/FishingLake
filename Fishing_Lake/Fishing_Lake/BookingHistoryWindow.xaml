<Window x:Class="Fishing_Lake.BookingHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fishing_Lake"
        mc:Ignorable="d"
                Title="Lịch Sử Đặt Hồ" Height="500" Width="850"
        WindowStartupLocation="CenterScreen" Background="#e0f7fa">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
            <TextBlock Text="🔍 Tìm kiếm: " VerticalAlignment="Center"/>
            <TextBox x:Name="SearchBox" Width="200" Margin="5,0" TextChanged="SearchBox_TextChanged"/>
        </StackPanel>

        <ListView x:Name="HistoryListView" Height="400">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Khách hàng" Width="160" DisplayMemberBinding="{Binding CustomerName}"/>
                    <GridViewColumn Header="SĐT" Width="120" DisplayMemberBinding="{Binding Phone}"/>
                    <GridViewColumn Header="Hồ câu" Width="160" DisplayMemberBinding="{Binding PondName}"/>
                    <GridViewColumn Header="Ngày câu" Width="100" DisplayMemberBinding="{Binding BookingDate}"/>
                    <GridViewColumn Header="Giá (VNĐ)" Width="100" DisplayMemberBinding="{Binding Price}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Window>